% misc

# 今週の木曜日
date --date "$(date --date 'last sunday' +%Y-%m-%d) 4 days" +%Y-%m-%d

# textlint init
echo '{ "rules": {} }' > .textlintrc.json

# Reset nvim
rm -rf ~/.local/{share,state}/nvim ~/.cache/nvim

# Disabled formatter
export DISABLED_FORMATTER=1; nvim

# Display Mac spec
system_profiler SPHardwareDataType
